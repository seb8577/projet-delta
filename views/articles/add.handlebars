<section>
    <div class="container cont-add-art">
        <form action="/articles/post" method="POST" enctype="multipart/form-data">
            <div class="form-group">
               <h5><label for="exampleFormControlInput1">Title article</label></h5>
                <input type="text" class="form-control" name="title">
            </div>

            <div class="form-group">
                <h5><label for="exampleFormControlTextarea1">Textarea</label>
                <textarea class="form-control" name="content" rows="3"></textarea>
            </div>

            <div class="file">
                <label class="file-label">
                    <input class="file-input" type="file" name="image">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Download an image .jpg
                        </span>
                    </span>
                </label>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="submit" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</section>